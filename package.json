  "bugs": {
    "url": "https://github.com/davespencerbacay/soft-ai-solutions/issues"
  },
  "homepage": "https://github.com/davespencerbacay/soft-ai-solutions#readme",
  "dependencies": {
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "nodemon": "^3.1.10"
  }
}
